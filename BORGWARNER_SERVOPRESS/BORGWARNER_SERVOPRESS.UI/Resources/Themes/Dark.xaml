    <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="/resources/fonts/open-sans/#open sans" />
    </Style>

    <Style x:Key="Font_Light">
        <Setter Property="TextElement.FontFamily" Value="/resources/fonts/open-sans/#open sans light" />
