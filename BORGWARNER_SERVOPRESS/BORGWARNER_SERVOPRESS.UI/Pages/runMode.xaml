                    <TextBox x:Name="Screwdriver5_Run_Torque" Visibility="Hidden" HorizontalAlignment="Left" Height="116" Margin="4093,636,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="Screwdriver5_Run_Angle" Visibility="Hidden" HorizontalAlignment="Left" Height="116" Margin="4093,777,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363" FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Page>
