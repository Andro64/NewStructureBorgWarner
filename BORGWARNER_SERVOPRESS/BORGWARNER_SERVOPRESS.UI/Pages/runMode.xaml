                    <Label x:Name="Tryfail_Screw3" Visibility="Hidden" Content="Intentos de&#xA;atornillado 3" HorizontalAlignment="Left" Height="171" Margin="713,1184,0,0" VerticalAlignment="Top" Width="399" FontSize="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
