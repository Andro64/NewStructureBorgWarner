<Window x:Class="BORGWARNER_SERVOPRESS.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BORGWARNER_SERVOPRESS.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="233,18,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="5.345,0.443"/>
        <Label x:Name="lblUser" Content="Usuario" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Margin="81,5,0,0" TextWrapping="Wrap" Text="Androide" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblPassword" Content="Contraseña" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="81,37,0,0" TextWrapping="Wrap" Text="12345" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblAccess" Content="Inicie sesion!......." HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnScrews" Content="Obtener Tornillos(Screws)" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Click="btnScrews_Click"/>
        <DataGrid x:Name="dtgScrews" HorizontalAlignment="Left" Height="101" Margin="14,141,0,0" VerticalAlignment="Top" Width="504" d:ItemsSource="{Binding}" AutoGenerateColumns="True"/>
        <Label x:Name="lblPage" Content="Página" HorizontalAlignment="Left" Margin="440,116,0,0" VerticalAlignment="Top" FontSize="9"/>
        <TextBox x:Name="txtPagination" HorizontalAlignment="Left" Margin="481,121,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="28" Height="13" FontSize="9"/>
        <Button x:Name="btnInitialize" Content="Inicializa el sistema" HorizontalAlignment="Left" Margin="414,28,0,0" VerticalAlignment="Top" Click="btnInitialize_Click"/>
        <Label x:Name="lblMessageScrew" Content="..." HorizontalAlignment="Left" Margin="266,101,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FF0B2ADA" FontWeight="Bold"/>

    </Grid>
</Window>
